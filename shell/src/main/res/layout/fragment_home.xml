<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/ll_home_root"
    >

    <com.flyco.tablayout.SlidingTabLayout
        android:id="@+id/sliding_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#fff"
        app:tl_indicator_width_equal_title="true"
        app:tl_textSelectColor="#333"
        app:tl_textUnselectColor="#999"
        app:tl_indicator_color="#333"
        app:tl_indicator_height="2dp"
        app:tl_textsize="14dp"
        app:tl_underline_color="@color/main_line"
        app:tl_underline_height="1px"
        >

    </com.flyco.tablayout.SlidingTabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/home_news_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </android.support.v4.view.ViewPager>
</LinearLayout>
